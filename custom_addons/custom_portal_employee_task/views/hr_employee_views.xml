<odoo>
    <!-- This goes in views/hr_timesheet_inherit.xml -->
    <record id="view_hr_employee_form_inherit_timesheet_access" model="ir.ui.view">
        <field name="name">hr.employee.form.timesheet.access.fix</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Fix for has_timesheet button -->
            <xpath expr="//button[@name='action_timesheet_from_employee']" position="attributes">
                <attribute name="groups">hr.group_hr_user</attribute>
            </xpath>
        </field>
    </record>
</odoo>