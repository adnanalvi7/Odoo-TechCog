<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_inherit_remote_location" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.remote.location</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_location_id']" position="after">
                <group>
                <field name="remote_plus_code"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
